/***
 * Module PasswordStrengthCheck
 * Initiate the password strength check plugin.
 * Site.ChooseNewPw  
 */
Site.PasswordStrengthCheck = (function (window, S, $) {
    
    return {
        init : function () {
            S.Common.out('Initiating password strength checker...');            
            var $target = $('#new-pw-form, #BillingAddress_Password'),
            	validationErrorField;
            
            $target.on('focus', function() {
            	validationErrorField = $target.siblings('.validation-error-field:visible');            
            });
            
            $target.on('keypress', function() {                     
            	if(validationErrorField.length > 0) {
            		validationErrorField.hide();            		
            	}
                $target.passStrength(globals.passStrengthPluginVars);                
            });
        }
        
    };
    
}(this, Site, jQuery));