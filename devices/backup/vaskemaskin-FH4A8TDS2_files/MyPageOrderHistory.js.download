/***
 * Module MyPageOrderHistory
 * Initiate scripts exclusive to order history in My Page
 */
Site.MyPageOrderHistory = (function (window, S, $) {
    
    /*
     * Prevent Markplace actions to run several times
     */
    var preventDoubleClick = function() {
        $('body').on('click', '.marketplace-header a.one-click', function(event) {
            var $this = $(this);
            if($this.data('clicked') === 'clicked') {
                event.preventDefault();
            } else {
                $this.data('clicked', 'clicked');
            }
            
        });
        
    }

    return {
        init : function () {
            S.Common.out('Initiating OrderHistory...');

            /*
             * Prevent Markplace actions to run several times
             */
            preventDoubleClick();
            
        },
        preventDoubleClick: preventDoubleClick
    };
    
}(this, Site, jQuery));